<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--     BASE APPLICATION THEME -->
    <style name="MyPersonalFinances" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/textOnPrimary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/textOnSecondary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomSplashScreenTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/colorSecondary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_balance_wallet</item>
        <item name="windowSplashScreenAnimationDuration">600</item>
        <item name="postSplashScreenTheme">@style/MyPersonalFinances</item>
    </style>

    <!--    CARD VIEW -->
    <style name="MainOverViewCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/YearOverviewCardCornerRadius</item>
        <item name="cardElevation">@dimen/YearOverviewCardElevation</item>
        <item name="android:layout_marginTop">@dimen/default_large</item>
    </style>

    <!--    MAIN OVER VIEW -->
    <style name="MainOverViewTitle" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MainOverViewTitle2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:layout_marginBottom">@dimen/default_extra_small</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MainOverViewTitle3" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_marginTop">@dimen/default_extra_small</item>
        <item name="android:layout_marginBottom">@dimen/default_extra_small</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MainOverViewSubtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="marginHorizontal">16dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--    YEAR OVER VIEW -->
    <style name="MainOverViewCardYear" parent="MainOverViewCard">
        <item name="contentPadding">@dimen/default_medium</item>
    </style>

    <style name="YearExpenses" parent="MainOverViewSubtitle">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="YearIncome" parent="MainOverViewSubtitle">
        <item name="android:textColor">@color/colorPrimaryVariant</item>
    </style>

    <!--    MONTH OVER VIEW -->
    <style name="MainOverViewCardMonth" parent="MainOverViewCard">
        <item name="strokeColor">@color/colorPrimaryVariant</item>
        <item name="strokeWidth">@dimen/default_small</item>
        <item name="contentPadding">@dimen/default_medium</item>
    </style>

    <!--    <style name="MainOverViewMonthItem" parent="Theme.MyPersonalFinances">-->
    <!--        -->
    <!--    </style>-->

    <style name="MonthExpenses" parent="MainOverViewSubtitle">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MonthIncome" parent="MainOverViewSubtitle">
        <item name="android:textColor">@color/colorPrimaryVariant</item>
    </style>

    <style name="MainOverViewMonthDonutChart" parent="MyPersonalFinances">
        <item name="android:layout_marginStart">@dimen/default_medium</item>
        <item name="android:layout_marginEnd">@dimen/default_medium</item>
        <item name="android:layout_marginBottom">@dimen/default_medium</item>
    </style>

    <style name="DefaultDonutChart" parent="MyPersonalFinances">
        <item name="donut_strokeWidth">@dimen/default_medium</item>
        <item name="donut_cap">20</item>
    </style>

    <!--    CURRENT DAY OVER VIEW-->
    <style name="MainOverViewCardCurrentDay" parent="MainOverViewCard">

    </style>

</resources>